---
import { Image } from "astro:assets";
import { House, Info } from "lucide-react";
import logo from "../assets/logo-white.png";
import SfxButton from "./SfxButton";

const items = [
  { name: "Home", url: "/", icon: House },
  { name: "About", url: "/about", icon: Info },
];
---

<div
  class="flex flex-col sticky z-10 bottom-0 w-full bg-black/20 backdrop-blur-md border-white/20 px-3 border-t shrink-0 xl:w-1/6 xl:h-screen xl:border-t-0 xl:border-r xl:top-0"
>
  <Image
    src={logo}
    alt="Spot The Hoax Logo"
    class="hidden xl:block my-10 lg:px-3 w-48"
  />
  <div
    class="flex items-center justify-center xl:justify-start xl:flex-col xl:items-start grow"
  >
    {
      items.map((item) => (
        <a
          href={item.url}
          class="flex items-center gap-4 py-3 px-4 rounded-md xl:w-full xl:mb-4 hover:bg-white/20"
        >
          <item.icon />
          <p>{item.name}</p>
        </a>
      ))
    }
    <div class="mt-auto justify-self-end">
      <SfxButton client:load />
    </div>
  </div>
</div>
