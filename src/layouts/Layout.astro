---
import "@fontsource-variable/noto-sans";
import Navbar from "../components/Navbar.astro";

const { title } = Astro.props;
const { PUBLIC_PLAUSIBLE_DOMAIN, PUBLIC_PLAUSIBLE_URL } = import.meta.env;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    {
      PUBLIC_PLAUSIBLE_DOMAIN && PUBLIC_PLAUSIBLE_URL && (
        <script
          defer
          data-domain={PUBLIC_PLAUSIBLE_DOMAIN}
          src={`${PUBLIC_PLAUSIBLE_URL}/js/script.outbound-links.js`}
        />
      )
    }
    <title>
      {title ? `${title} â€¢ Spot The Hoax` : "Spot The Hoax"}
    </title>
  </head>
  <body
    class="flex flex-col-reverse xl:flex-row min-h-screen w-screen text-white bg-black"
  >
    <Navbar />
    <slot />
  </body>
</html>
